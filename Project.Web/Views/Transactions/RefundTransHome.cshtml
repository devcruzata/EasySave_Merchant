                                    <th>Amount Redeemed</th>
                                </tr>
                            </thead>
                            <tbody id="redeemList"></tbody>

                        </table>
                    </div>
                    <!-- /.box-body -->
                </div>
                <!-- /.box -->
            </div>
        </div>*@
</section>
<!-- /.content -->

<script>
    function SubmitForm() {
        if ($("#sDateString").val().trim() == "") {
            $("#sDateString").addClass('addBorder');
        }
        else if ($("#eDateString").val().trim() == "") {
            $("#eDateString").addClass('addBorder');
            $("#sDateString").removeClass('addBorder');
        }
        else {
            $("#eDateString").removeClass('addBorder');
            $("#sDateString").removeClass('addBorder');
            $("#frmSubmit").submit();
        }

    }
</script>

<!-- page script -->
<script type="text/javascript">
    $(function () {
        $("#example1").dataTable();
        $("#tblredeem").dataTable();
        $('#example2').dataTable({
            "bPaginate": true,
            "bLengthChange": false,
            "bFilter": false,
            "bSort": true,
            "bInfo": true,
            "bAutoWidth": false
        });
    });
</script>
<!-- page script -->