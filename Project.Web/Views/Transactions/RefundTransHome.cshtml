@model Project.Web.Models.TransactionModel


<style>
    .addBorder {
        border-color: red !important;
    }
</style>


<!-- Content Header (Page header) -->
<section class="content-header">
    <h1>Refund Transactions History</h1>
    <!--<span class="breadcrumb"><strong><i>DEMONSTRATION</i></strong></span>-->
</section>


<!-- Main content -->
<section class="content">
    <div id="messagepanel" class="row" hidden="hidden">
        <div class="col-md-12">
            <div class="box-body">
                <span id="errorMsg"></span>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <div class="box box-success">
                @using (Html.BeginForm("RefundTransHome", "Transactions", FormMethod.Post, new { @id = "frmSubmit" }))
                {
                    <div class="box-body">
                        <div class="row">
                            <div class="col-lg-4">
                                @*<div id="NameDiv" class="form-group">
                                        <label>
                                            <label for="exampleInputEmail1">Transaction Type:&nbsp;&nbsp;&nbsp;</label>
                                            <input type="checkbox" checked id="award" />&nbsp;Award&nbsp;
                                            <input type="checkbox" id="redeem" />&nbsp;Redeem&nbsp;
                                        </label>
                                    </div>*@
                            </div>
                            <div class="col-lg-8"></div>
                        </div>
                        <div class="row">
                            <div class="col-lg-6">
                                <div id="fromDiv" class="form-group">
                                    <label for="exampleInputEmail1">From</label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="form-control date-control noText" id="sDateString" name="sDateString" />
                                    </div>
                                </div>
                            </div>
                            <div class="col-lg-6">
                                <div id="toDiv" class="form-group">
                                    <label for="exampleInputEmail1">To</label>
                                    <div class="input-group">
                                        <div class="input-group-addon">
                                            <i class="fa fa-calendar"></i>
                                        </div>
                                        <input type="text" class="form-control date-control noText" id="eDateString" name="eDateString" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }

            </div>
            <!-- /.box -->
        </div>
        <!-- /.box -->
    </div>
    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div class="box box-primary"></div>

            <!-- form start -->
            <div role="form">
                <div class="box-footer">
                    <div class="pull-right">

                        <button type="button" class="btn btn-primary" id="btnFetch" onclick="SubmitForm();">View History</button>
                        <button type="button" class="btn btn-danger" id="btnClear">Clear</button>

                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <!-- left column -->
        <div class="col-md-12">
            <!-- general form elements -->
            <div style="height:20px"></div>
        </div>
    </div>

    @if (Model.hasReport)
    {
        <div class="col-xs-12">
            <div class="box">
                <div class="box-header">
                    <h3 class="box-title">Refund Transactions History</h3>
                </div>
                <!-- /.box-header -->
                <div class="box-body table-responsive">
                    <table id="example1" class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>TR NO.</th>
                                <th>Date / Time</th>
                                <th>Card Holder</th>
                                <th>Card No.</th>
                                <th>Amount</th>
                                @*<th>Refund Points</th>*@
                                <th>Total Points</th>
                            </tr>
                        </thead>
                        <tbody id="awardList">
                            @foreach (var trans in Model.RefundReport)
                            {
                                <tr>
                                    <td>@trans.SeriolNo</td>
                                    <td>@trans.DateOfTrans</td>
                                    <td>@trans.CardHolder</td>
                                    <td>@trans.CardNo</td>
                                    <td>$@trans.Amount</td>
                                    @*<td>@trans.RefundPoint</td>*@
                                    <td>@trans.TotalPoints</td>
                                </tr>
                            }
                        </tbody>

                    </table>
                </div>
                <!-- /.box-body -->
            </div>
            <!-- /.box -->
        </div>

    }


    @*<div class="row" id="redeemhistory" hidden="hidden">
            <div class="col-xs-12">
                <div class="box">
                    <div class="box-header">
                        <h3 class="box-title">Redeem Transactions History</h3>
                    </div>
                    <!-- /.box-header -->
                    <div class="box-body table-responsive">
                        <table id="tblredeem" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>TR NO.</th>
                                    <th>Date / Time</th>
